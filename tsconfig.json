{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/*.ts", "src/surah/source/*.json", "src/generator/util/constant.ts"],
  "exclude": ["node_modules", "src/libs/*", "src/generator/util/constant.ts"]
}
